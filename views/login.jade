extends layout

block content
  .container
    form.form-signin(role='form', action='/login', method='post')
      h2.form-signin-heading Connectez vous
      label.sr-only(for='inputEmail')
      input.form-control(type='text', name='username', id='inputEmail', placeholder='Pseudo', required, autofocus)
      input.form-control(type='password', name='password', id='inputPassword', placeholder='Mot de passe')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Connection
